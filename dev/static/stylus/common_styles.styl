.wrapper
    width 100%
    max-width 1360px
    margin 0 auto
    //background-color yellow

.inner
    max-width 1240px
    margin 0 auto
    padding 0 25px
    //background-color #63b945

.btn
    display inline-block
    min-width 140px
    padding 12px 20px
    text-align center
    border-radius 3px
    border 2px solid $banner-btn
    text-transform uppercase
    font-size 0.875em //14px
    color $banner-btn
    transition .3s

    &:hover
        background-color $banner-btn
        color $white