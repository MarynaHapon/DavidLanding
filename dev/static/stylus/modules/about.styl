.about
    background-color $bg-about
    color $text-about

.about-content
    width 100%
    display flex
    flex-direction row
    justify-content space-between
    align-items center
    padding 40px 15px

    h2
        font-size 20px
        padding 0 30px 0 0

    ul
        font-size 16px
        list-style-position inside
        list-style-image url(../../static/img/general/keyboard-right-arrow-button.png)

    li
        padding 2px 0


@media (max-width 690px)
    .about-content
        flex-direction column
        justify-content flex-start
        align-items flex-start

        h2
            padding 0 0 30px 0
