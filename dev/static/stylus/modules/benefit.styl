.benefit-item,
.benefit-item-reverse
  display flex
  justify-content space-between

.benefit-item-list
  margin 45px 0 80px

.benefit-item
  flex-direction row
  padding 35px 0


.benefit-item-reverse
  flex-direction row-reverse

.benefit-item-inner
  position relative
  display flex
  flex-direction column
  align-items flex-start
  margin 0 7%
  max-width 575px

.benefit-title
  margin 100px 0 0 0
  color $header-benefit
  font-size 30px
  font-weight bold
  text-align center

.benefit-item-title,
.benefit-item-text,
.benefit-button
    color $text-benefit

.benefit-item-text
    max-width 575px

.benefit-item-title
    font-size 30px
    margin 130px 0 20px
    z-index 2

.benefit-item-number
    position absolute
    top 0
    font-size 200px
    font-weight bold
    color $number-benefit



.benefit-item-text,
.benefit-button
  font-size 15px
  line-height 22.5px
  z-index 2

.benefit-button
  display inline-block
  border none
  padding 0
  text-align start
  background-color $white

.benefit.item-img
  size(420px)