.benefit-item,
.benefit-item-reverse
  display flex
  justify-content space-between

.benefit-item-list
  margin 45px 0 80px

.benefit-item
  flex-direction row
  padding 35px 0

.benefit-item-reverse
  flex-direction row-reverse

.benefit-item-inner
  display flex
  flex-direction column
  margin 0 10%
  width 70%

.benefit-title
  margin 100px 0 0 0
  color $header-benefit
  font-size 30px
  font-weight bold
  text-align center

.benefit-item-title,
.benefit-item-text,
.benefit-button
  color $text-benefit

.benefit-item-title
  font-size 30px

.benefit-item-number
  font-size 200px
  font-weight bold
  color $number-benefit

.benefit-item-text,
.benefit-button
  font-size 15px

.benefit-button
  border none

.benefit.item-img
  size(420px)