.what-content

    h2
        padding 60px 0 0
        color $header-what
        font-size 1.5em
        text-align center

    p
        margin 0 10%
        line-height 1.5em
        text-align center

.what-paragraph
    padding 30px 0
    font-size 1.125em
    color $text-what
    text-align center

.what-list
    margin 0 auto
    max-width 850px
    font-size 0.875em
    line-height 1.5em
    color $text-desc-what

    ul
        padding 50px 0 50px
        list-style-image url("../../static/img/general/verification-mark.png")
        list-style-position outside
        column-count 2
        column-gap 60px

        li
            padding 5px 0

.what-description
    margin 0 0 30px
    font-size 0.875em
    color $text-desc-what


