.what-content

    h2
        padding 60px 0 0
        color $header-what
        font-size 32px
        text-align center

    p
        margin 0 10%
        line-height 1.5em
        text-align center

.what-paragraph
    padding 30px 0
    font-size 19px
    color $text-what
    text-align center

.what-list
    margin 0 auto
    max-width 850px
    font-size 0.875em
    line-height 1.5em
    color $text-desc-what

    ul
        padding 50px 0 50px
        list-style-image url(../../static/img/general/verification-mark.png)
        list-style-position outside
        column-count 2
        column-gap 60px

        li
            padding 5px 0

.what-description
    margin 0 0 30px
    font-size 15px
    color $text-desc-what


@media screen and (max-width 1024px)
    .what-list
        ul
            column-count 1


@media screen and (min-width 768px) and (max-width 1024px)
    .what-list
        max-width 700px


@media screen and (min-width 425px) and (max-width 768px )
    .what-list
        width 400px


@media screen and (min-width 320px) and (max-width 425px)
    .what-list
        width 250px

    .what-content
        p
            margin 0 2%


@media screen and (max-width 320px)
    .what-list
        width 220px




